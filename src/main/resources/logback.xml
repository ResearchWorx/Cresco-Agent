<?xml version="1.0" encoding="UTF-8"?>
<configuration>
	<statusListener class="ch.qos.logback.core.status.NopStatusListener" />

	<appender name="STDOUT" class="ch.qos.logback.core.ConsoleAppender">
		<layout class="ch.qos.logback.classic.PatternLayout">
			<Pattern>
				%d{yyyy-MM-dd HH:mm:ss} [%thread] %highlight(%-5level) %logger{36} - %msg%n
			</Pattern>
		</layout>
	</appender>

	<logger name="ActiveMQ.ActiveAgentConsumer" level="debug" additivity="false">
		<appender-ref ref="STDOUT" />
	</logger>
	<logger name="ActiveMQ.ActiveBroker" level="info" additivity="false">
		<appender-ref ref="STDOUT" />
	</logger>
	<logger name="ActiveMQ.ActiveProducer" level="debug" additivity="false">
		<appender-ref ref="STDOUT" />
	</logger>
	<logger name="ActiveMQ.ActiveBrokerManager" level="info" additivity="false">
		<appender-ref ref="STDOUT" />
	</logger>
	<logger name="ActiveMQ.ActiveRegionConsumer" level="info" additivity="false">
		<appender-ref ref="STDOUT" />
	</logger>
	<logger name="ActiveMQ.BrokeredAgent" level="debug" additivity="false">
		<appender-ref ref="STDOUT" />
	</logger>
	<logger name="ActiveMQ.BrokerMonitor" level="info" additivity="false">
		<appender-ref ref="STDOUT" />
	</logger>

	<logger name="netdiscovery.DiscoveryClientWorkerIPv6" level="info" additivity="false">
		<appender-ref ref="STDOUT" />
	</logger>
	<logger name="netdiscovery.DiscoveryClientIPv6" level="info" additivity="false">
		<appender-ref ref="STDOUT" />
	</logger>
	<logger name="netdiscovery.DiscoveryClientWorkerIPv4" level="info" additivity="false">
		<appender-ref ref="STDOUT" />
	</logger>
	<logger name="netdiscovery.DiscoveryClientIPv4" level="info" additivity="false">
		<appender-ref ref="STDOUT" />
	</logger>
	<logger name="netdiscovery.DiscoveryEngine" level="info" additivity="false">
		<appender-ref ref="STDOUT" />
	</logger>
	<logger name="netdiscovery.DiscoveryEngineWorker" level="info" additivity="false">
		<appender-ref ref="STDOUT" />
	</logger>

	<logger name="plugincore.PluginEngine" level="info" additivity="false">
		<appender-ref ref="STDOUT" />
	</logger>
	<logger name="plugincore.WatchDog" level="info" additivity="false">
		<appender-ref ref="STDOUT" />
	</logger>

	<root level="info">
		<appender-ref ref="STDOUT" />
	</root>

</configuration>